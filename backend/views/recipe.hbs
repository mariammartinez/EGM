<section class="background-recipes">
    <h1><a href="/">El Grimorio Moderno</a></h1>
    <div>{{>menu}}</div>
    <div class="container pociones"> 
        <p>{{title}}</p>    
    </div>
    <div class="container">
        <div class="row">
            <div class="one-recipe col-lg-8 offset-lg-2 mt-4">
                <div  class="container">
                    <h3 class="recipe-name">{{recipe.name}}</h3>
                    <div class="recipe-img"><img src="{{recipe.image}}" alt="cupcakes"></div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4>Ingredientes</h4>
                            <ul>
                                {{#each recipe.ingredients}}
                                    <li>{{this.name}} </li>  
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <h4>Preparation</h4>
                            <div class="text-break">{{recipe.text}}</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
